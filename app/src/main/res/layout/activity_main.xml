<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Not Just The Tip"
        android:textColor="@color/colorText1"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="112dp"
        android:layout_height="84dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/smiley1"
        android:onClick="bill1"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextview" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="97dp"
        android:layout_height="85dp"
        android:layout_marginTop="196dp"
        android:src="@drawable/smiley2"
        android:onClick="bill2"
        app:layout_constraintEnd_toStartOf="@+id/imageButton3"
        app:layout_constraintTop_toBottomOf="@+id/titleTextview" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="76dp"
        android:layout_height="98dp"
        android:layout_marginTop="196dp"
        android:src="@drawable/smiley3"
        android:onClick="bill3"
        app:layout_constraintEnd_toStartOf="@+id/imageButton4"
        app:layout_constraintTop_toBottomOf="@+id/titleTextview" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="86dp"
        android:layout_height="92dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/smiley4"
        android:onClick="bill4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextview" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="100dp"
        android:layout_height="79dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/smiley5"
        android:onClick="bill5"
        app:layout_constraintBottom_toTopOf="@+id/tipTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextview"
        app:layout_constraintVertical_bias="0.947" />

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="288dp"
        android:layout_height="61dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="8dp"
        android:text="Tip:"
        android:textColor="@color/colorText1"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton1" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="290dp"
        android:layout_height="51dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Total:"
        android:textColor="@color/colorText1"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipTextView"
        app:layout_constraintVertical_bias="0.45" />

    <EditText
        android:id="@+id/billEditText"
        android:layout_width="226dp"
        android:layout_height="93dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextview" />

    <TextView
        android:id="@+id/billTextView"
        android:layout_width="116dp"
        android:layout_height="53dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="36dp"
        android:text="Bill ->"
        android:textColor="@color/colorText1"
        android:textSize="45sp"
        app:layout_constraintEnd_toStartOf="@+id/billEditText"
        app:layout_constraintTop_toBottomOf="@+id/titleTextview" />

</androidx.constraintlayout.widget.ConstraintLayout>